{
  "name": "Python Dev Environment (Stable)",
  "image": "mcr.microsoft.com/devcontainers/python:3.10-bullseye",
  "features": {
    "github-cli": "latest"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-vsliveshare.vsliveshare",
        "github.codespaces",
        "github.vscode-pull-request-github",
        "github.github-vscode-theme",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "michaelCurrin.auto-commit-msg",
        "bierner.emojisense",
        "emmanuelbeziat.vscode-great-icons",
        "mathematic.vscode-pdf",
        "ritwickdey.LiveServer",
        "yutengjing.open-in-external-app"
      ],
      "settings": {
        "extensions.autoUpdate": false,
        "extensions.autoCheckUpdates": false,
        "workbench.enableExperiments": false,
        "telemetry.enableTelemetry": false,
        "telemetry.telemetryLevel": "off",
        "github.telemetry.enabled": false,
        "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "python.venvPath": "${workspaceFolder}",
        "python.venvFolders": [
          "."
        ],
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "jupyter.kernels.filter": [
          "venv"
        ],
        "jupyter.interactiveWindow.kernelName": "venv",
        "jupyter.askForKernelRestart": false,
        "jupyter.enableAutoStart": true,
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "remoteUser": "root",
  "initializeCommand": "id vscode >/dev/null 2>&1 && sudo chown -R vscode:vscode /workspaces || true",
  "postCreateCommand": "bash .devcontainer/postCreate.sh",
  "containerEnv": {
    "PIP_DISABLE_PIP_VERSION_CHECK": "1",
    "PYTHONUNBUFFERED": "1"
  },
  "overrideCommand": true
}