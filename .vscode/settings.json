{
  
  "github.copilot.enable": { "*": false },
  "github.copilot.inlineSuggest.enable": false,
  "github.copilot.editor.enableAutoCompletions": false,
  "github.copilot.chat.enabled": false,
  "github.copilot.chat.location": "none",
  "github.copilot.suggestions.showExamples": false,
  "chat.commandCenter.enabled": false,
  "chat.agent.enabled": false,
  "chat.showChat": false,
  "chat.editor.enabled": false,
  "workbench.chat.enabled": false,
  "workbench.experimental.chat.enabled": false,
  "workbench.experimental.commandPaletteChat.enabled": false,
  "editor.inlineSuggest.enabled": false,
  "editor.quickSuggestions": {
    "other": false,
    "comments": false,
    "strings": false
  },
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "telemetry.telemetryLevel": "off",
  "github.telemetry.enabled": false,
  "workbench.enableExperiments": false,
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": false,
  "extensions.ignoreRecommendations": true,

  
  "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",
  "python.terminal.activateEnvironment": true,
  "python.analysis.extraPaths": [
    "/workspaces/python_class/labs/lab2/student_code",
    "/workspaces/python_class/labs/lab2/default_code",
    "/workspaces/python_class"
  ],
  "python.autoComplete.extraPaths": [
    "/workspaces/python_class"
  ],
  "python.envFile": "${workspaceFolder}/.env",
  "python.formatting.provider": "black",
  "editor.formatOnSave": true,

  
  "notebook.globalToolbar": false,
  "jupyter.globalToolbar": false,
  "notebook.cellToolbarVisibility": "hover",
  "jupyter.askForKernelRestart": false,
  "jupyter.enableAutoStart": true,

  
  "terminal.integrated.initialHint": false,
  "terminal.integrated.profiles.linux": {
    "bash": { "path": "/bin/bash" }
  },
  "terminal.integrated.defaultProfile.linux": "bash",

  
  "git.showUntrackedFiles": true,
  "git.untrackedChanges": "mixed",

  
  "explorer.sortOrder": "filesFirst",
  "explorer.excludeGitIgnore": false,
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/venv": true,
    "**/.devcontainer": true,
    "**/.history": true,
    "**/.vscode": true,
    "**/.git": true,
    "**/.gitignore": true,
    "**/.gitattributes": true,
    "**/.nbstripout.json": true,
    "**/misc": true,
    "**/tempCodeRunnerFile.*": true,
    "**/default_code": true
  },
  "files.watcherExclude": {
    "**/.gitignore": true,
    "**/tempCodeRunnerFile.*": true
  },
  "search.exclude": {
    "**/tempCodeRunnerFile.*": true
  },

  
  "editor.minimap.showSlider": "mouseover",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.tabCloseButton": "right",
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.tabActionLocation": "right",
  "workbench.startupEditor": "none",

  
  "code-runner.runInTerminal": true,
  "code-runner.ignoreSelection": true,
  "code-runner.executorMap": {
    "python": "python -u"
  },

  
  "liveshare.guestReadOnly": true,
  "liveshare.guestApprovalRequired": true,

  
  "openInExternalApp.apps": {
    ".pptx": "cmd /c start \"\""
  }
}
